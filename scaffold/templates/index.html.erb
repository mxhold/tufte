<article>
  <h1>
    My Blog
  </h1>
  <p class="subtitle">
    a place for my thoughts
  </p>

  <section id="about">
    <p>
      I'm a cool person.
    </p>
  </section>

  <section id="blog-posts">
    <h2>Blog posts</h2>
    <ul>
    <% @posts.sort_by(&:date).reverse.each do |post| %>
      <li>
        <%= post.date %> &mdash;
        <a href="<%= post.output_directory %>"><%= post.title %></a>
      </li>
    <% end %>
    </ul>
  </section>
</article>
